<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowCategoriesServlet</servlet-name>
        <servlet-class>servlets.ShowCategoriesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowCategoriesServlet</servlet-name>
        <url-pattern>/showCategories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowNamesServlet</servlet-name>
        <servlet-class>servlets.ShowNamesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowNamesServlet</servlet-name>
        <url-pattern>/showNames</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowQuizzesByCategoryServlet</servlet-name>
        <servlet-class>servlets.ShowQuizzesByCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowQuizzesByCategoryServlet</servlet-name>
        <url-pattern>/findQuizByCategory</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ShowDescriptionsServlet</servlet-name>
        <servlet-class>servlets.ShowDescriptionsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowDescriptionsServlet</servlet-name>
        <url-pattern>/showDescriptions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindQuizByNameServlet</servlet-name>
        <servlet-class>servlets.FindQuizByNameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FindQuizByNameServlet</servlet-name>
        <url-pattern>/findQuizByName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TakeQuizServlet</servlet-name>
        <servlet-class>servlets.TakeQuizServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TakeQuizServlet</servlet-name>
        <url-pattern>/takeQuiz</url-pattern>
    </servlet-mapping>

</web-app>